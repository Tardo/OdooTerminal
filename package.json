{
  "scripts": {
    "prepare": "husky install",
    "release": "node scripts/release.mjs",
    "clean": "rm -rf ./dist",
    "dev:watch": "export ODOO_TERMINAL_ENV=development && rollup -c -w",
    "dev:tests": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && poetry run pytest",
    "prod:build": "export ODOO_TERMINAL_ENV=production && node scripts/build.mjs",
    "start:firefox": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && web-ext run --verbose -t firefox-desktop",
    "start:chromium": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && web-ext run --verbose -t chromium",
    "start:chrome": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && web-ext run --verbose -t chromium --chromium-binary $(which chrome)"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "adm-zip": "^0.5.10",
    "async-mutex": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "minimist": "^1.2.8",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "simple-git": "^3.20.0",
    "web-ext": "^7.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "web-ext lint --ignore-files=src/js/**"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{mjs,js}": [
      "eslint --color --fix"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": false,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "webextensions": true,
      "jquery": true,
      "es6": true,
      "es2024": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ],
    "globals": {
      "__OdooTerminal": "readonly",
      "_": "off",
      "moment": "readonly",
      "odoo": "readonly",
      "owl": "readonly",
      "openerp": "off"
    },
    "rules": {
      "eqeqeq": "error",
      "no-empty-function": "error",
      "no-eval": "error",
      "no-implicit-coercion": "error",
      "no-implicit-globals": "error",
      "no-implied-eval": "error",
      "no-return-assign": "error",
      "no-undef-init": "error",
      "no-shadow": "error",
      "no-script-url": "error",
      "no-unneeded-ternary": "error",
      "no-unused-expressions": "error",
      "no-labels": "error",
      "no-useless-call": "error",
      "no-useless-computed-key": "error",
      "no-useless-concat": "error",
      "no-useless-constructor": "error",
      "no-useless-rename": "error",
      "no-useless-return": "error",
      "no-void": "error",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ],
      "prefer-const": "error",
      "prefer-numeric-literals": "error",
      "prefer-object-has-own": "error",
      "spaced-comment": "error",
      "radix": "error",
      "prefer-arrow-callback": "warn",
      "no-var": "warn",
      "no-extra-bind": "warn",
      "no-lone-blocks": "warn"
    }
  }
}
