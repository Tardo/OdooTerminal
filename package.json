{
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "release": "node scripts/release.mjs",
    "clean": "rm -rf ./dist",
    "dev:flowcheck": "export ODOO_TERMINAL_ENV=development && flow check",
    "dev:rollup": "export ODOO_TERMINAL_ENV=development && rollup -c",
    "dev:rollup:watch": "export ODOO_TERMINAL_ENV=development && rollup -c -w",
    "dev:tests": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && poetry run pytest",
    "prod:build": "export ODOO_TERMINAL_ENV=production && node scripts/build.mjs",
    "start:firefox": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && web-ext run --verbose -t firefox-desktop",
    "start:chromium": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && web-ext run --verbose -t chromium",
    "start:chrome": "export ODOO_TERMINAL_ENV=development && node scripts/build.mjs && web-ext run --verbose -t chromium --chromium-binary $(which chrome)"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/preset-flow": "^7.24.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "adm-zip": "^0.5.12",
    "async-mutex": "^0.5.0",
    "autoprefixer": "^10.4.18",
    "babel-plugin-i18next-extract": "^0.10.0",
    "cssnano": "^6.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.7",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "flow-bin": "^0.231.0",
    "hermes-eslint": "^0.20.1",
    "husky": "^9.0.11",
    "i18next": "^23.10.0",
    "i18next-http-backend": "^2.5.0",
    "lint-staged": "^15.2.2",
    "minimist": "^1.2.8",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "simple-git": "^3.22.0",
    "web-ext": "^7.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "web-ext lint --ignore-files=src/js/**"
    }
  },
  "lint-staged": {
    "*.{mjs,js}": [
      "eslint --color --fix --parser hermes-eslint"
    ]
  },
  "babel": {
    "targets": {
      "esmodules": true
    },
    "presets": [
      "@babel/preset-flow"
    ],
    "plugins": [
      "babel-plugin-syntax-hermes-parser",
      [
        "i18next-extract",
        {
          "locales": [
            "en",
            "es"
          ],
          "discardOldKeys": true,
          "outputPath": "_locales/{{locale}}/{{ns}}.json",
          "useI18nextDefaultValue": true
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": false,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": false,
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false
  },
  "eslintConfig": {
    "root": true,
    "parser": "hermes-eslint",
    "env": {
      "browser": true,
      "webextensions": true,
      "jquery": true,
      "es6": true,
      "es2024": true
    },
    "plugins": [
      "ft-flow"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:ft-flow/recommended",
      "prettier",
      "plugin:json/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ],
    "globals": {
      "__OdooTerminal": "readonly",
      "_": "off",
      "moment": "readonly",
      "odoo": "readonly",
      "owl": "readonly",
      "luxon": "readonly",
      "openerp": "off"
    },
    "rules": {
      "eqeqeq": "error",
      "no-empty-function": "error",
      "no-eval": "error",
      "no-implicit-coercion": "error",
      "no-implicit-globals": "off",
      "no-implied-eval": "error",
      "no-return-assign": "error",
      "no-undef-init": "error",
      "no-shadow": "error",
      "no-script-url": "error",
      "no-unneeded-ternary": "error",
      "no-unused-expressions": "error",
      "no-labels": "error",
      "no-useless-call": "error",
      "no-useless-computed-key": "error",
      "no-useless-concat": "error",
      "no-useless-constructor": "error",
      "no-useless-rename": "error",
      "no-useless-return": "error",
      "no-void": "error",
      "no-console": [
        "warn",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ],
      "prefer-const": "error",
      "prefer-numeric-literals": "error",
      "prefer-object-has-own": "error",
      "spaced-comment": "error",
      "radix": "error",
      "prefer-arrow-callback": "warn",
      "no-var": "warn",
      "no-extra-bind": "warn",
      "no-lone-blocks": "warn"
    }
  }
}
